<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.canvas.Canvas?>
<?import main_java.controllers.canvas.CanvasController?>
<VBox id="body" prefHeight="600" prefWidth="800" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="sample.Controller">
    <VBox id="menuContainer">
        <MenuBar fx:id="menuBar">
            <menus>
                <Menu text="File">
                    <items>
                        <MenuItem text="New" />
                        <MenuItem text="Open" />
                        <MenuItem text="Save" />
                        <MenuItem text="Save As" />
                        <SeparatorMenuItem/>
                        <MenuItem text="Exit" />
                    </items>
                </Menu>
                <Menu text="Edit">
                    <items>
                        <MenuItem text="Copy" />
                        <MenuItem text="Cut" />
                        <MenuItem text="Paste" />
                    </items>
                </Menu>
                <Menu text="Help">
                    <items>
                        <SeparatorMenuItem/>
                        <MenuItem text="About" onAction="#onClick" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </VBox>
    <Pane fx:id="canvasContainer">
        <CanvasController height="600.0" width="800.0" fx:id="canvas"/>
        <VBox.margin>
            <Insets left="50.0" top="50.0" />
        </VBox.margin>
    </Pane>
</VBox>

