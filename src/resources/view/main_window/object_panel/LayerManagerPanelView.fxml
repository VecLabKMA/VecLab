<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import main_java.controllers.main_window.object_panel.*?>

<fx:root styleClass="layersPanel, managerPanel" type="LayerManagerPanelController" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1">

    <stylesheets>
        <URL value="@managerPanel.css" />
    </stylesheets>

    <TreeView fx:id="layersView" GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="3"/>
    <TextField fx:id="nameField" promptText="Назва нового шару" GridPane.rowIndex="1" GridPane.columnSpan="2"/>
    <Button fx:id="addLayerButton" text="Додати шар" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <Button fx:id="deleteLayerButton" text="Видалити шар" GridPane.columnIndex="1" GridPane.rowIndex="2" />
    <Button fx:id="setCurrentLayerButton" text="Обрати шар" GridPane.columnIndex="2" GridPane.rowIndex="2" />
    <Button fx:id="moveLayerUpButton" text="Підняти на один" GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <Button fx:id="moveLayerToTopButton" text="Нагору" GridPane.columnIndex="1" GridPane.rowIndex="3" />
    <Button fx:id="moveLayerDownButton" text="Опустити на один" GridPane.columnIndex="0" GridPane.rowIndex="4" />
    <Button fx:id="moveLayerToBottomButton" text="Вниз" GridPane.columnIndex="1" GridPane.rowIndex="4" />
    <Separator styleClass="separatist" GridPane.columnSpan="3" GridPane.rowIndex="5"/>
</fx:root>
